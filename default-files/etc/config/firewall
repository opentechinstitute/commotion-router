
config defaults
	option syn_flood '1'
	option input 'DROP'
	option output 'ACCEPT'
	option forward 'DROP'

config zone
	option name 'lan'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'DROP'
	list network 'client'

config zone
	option name 'mesh'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'DROP'
	list network 'mesh'

config zone
	option name 'wan'
	option input 'DROP'
	option output 'ACCEPT'
	option forward 'DROP'
	option masq '1'
	list network 'wan'

config zone
	option name 'vpn'
	option input 'DROP'
	option output 'ACCEPT'
	option forward 'DROP'
	list network 'vpn'

config forwarding
	option src 'mesh'
	option dest 'mesh'

config forwarding
	option src 'lan'
	option dest 'lan'

config forwarding
	option src 'mesh'
	option dest 'wan'

config forwarding
	option src 'lan'
	option dest 'mesh'

config forwarding
	option src 'lan'
	option dest 'wan'

